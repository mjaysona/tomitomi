---
import Tag from '@/components/Tag.astro';
import { TagItem } from '@/interfaces/tag';

export interface Props extends TagItem {
  tags: Array<string>,
};

const { tags, color, size, multipleLines } = Astro.props;
---

<div>
  {tags.map(tag => (
    <div class={`${size}`}>
      <Tag tag={tag} color={color} size={size} />
    </div>
  ))}
</div>
<style lang="scss">
  div {
    display: inline-block;
    > div {
      &.sm {
        margin-right: 8px;
      }
      &.md {
        margin-right: 12px;
      }
    }
  }
</style>
