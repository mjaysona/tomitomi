---
import { TagItem } from '@/interfaces/tags';
import TagGroup from './TagGroup.astro';

export interface Props {
  title: string,
  excerpt?: string,
  date: string,
  compact?: boolean,
}

const { title, excerpt, date, compact } = Astro.props;

const data = [
  {
    label: 'Development',
    size: 'sm',
    color: 'secondary',
  },
  {
    label: 'Freelance',
    size: 'sm',
  },
  {
    label: 'Frontend',
    size: 'sm',
  }
] as TagItem[];
---

<div class={compact ? 'compact' : ''}>
  <h2><a href="#">{title}</a></h2>
  {!compact && (
    <p>{excerpt}</p>
  )}
  <div>
    <TagGroup data={data} />
    <span>{date}</span>
  </div>
</div>
<style lang="scss">
  @import '../styles/variables.scss';

  div {
    position: relative;
    > div {
      align-items: center;
      display: flex;
      justify-content: space-between;
      span {
        color: $gray-lighter;
        font-size: 0.75rem;
        font-weight: 600;
      }
    }
    h2 {
      color: $primary-color;
    }
    &.compact {
      display: flex;
      flex-direction: column-reverse;
      h2 {
        margin-top: 12px;
      }
    }
  }
</style>
